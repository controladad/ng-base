{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/base",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "src/assets",
      "output": "assets"
    },
    {
      "glob": "**/*",
      "input": "src/theme",
      "output": "theme"
    },
    {
      "glob": "index.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "styles.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "tailwind.js",
      "input": "src/configs",
      "output": "."
    }
  ]
}
